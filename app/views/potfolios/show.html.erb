<div class="container portfolio-container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag portfolio_img(@potfolio_item.main_image, 'main'), width: '100%' %>
    </div>
    <div class="col-md-5">
      <h1><%= @potfolio_item.title %></h1>
      <hr>
      <em><%= @potfolio_item.subtitle %></em>

      <p><%= @potfolio_item.body %></p>
      <hr>
      <h3>Technologies Used</h3>
      <% @potfolio_item.technologies.each do |tech| %>
        <p><%= tech.name %></p>
      <% end %>

      <% if logged_in?(:site_admin) %>
        <div>
          <%= link_to "Edit Item", edit_potfolio_path(@potfolio_item), class: 'btn btn-warning' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
