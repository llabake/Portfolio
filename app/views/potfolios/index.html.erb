<h1> Portfolio Items</h1>


<%=link_to "Create New Item", new_potfolio_path %>
<% @potfolio_items.each do |potfolio_item| %>
  <p><%= link_to potfolio_item.title, potfolio_show_path(potfolio_item)%></p>
  <p><%= potfolio_item.subtitle%></p>
  <p><%= potfolio_item.body%></p>
  <%= image_tag potfolio_item.thumb_image unless potfolio_item.thumb_image.nil?%>
  <%=link_to "Edit", edit_potfolio_path(potfolio_item) %>
  <%= link_to "Delete Portfolio Item", potfolio_path(potfolio_item), method: :delete, data: { confirm: "Are you sure?" } %>
<% end %>