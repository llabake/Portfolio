<p><%= link_to potfolio_item.title, potfolio_show_path(potfolio_item)%></p>
<p><%= potfolio_item.subtitle%></p>
<p><%= potfolio_item.body%></p>
<%= image_tag potfolio_item.thumb_image unless potfolio_item.thumb_image.nil?%>
<%=link_to "Edit", edit_potfolio_path(potfolio_item) if logged_in?(:site_admin )%>
<%= link_to "Delete Portfolio Item", potfolio_path(potfolio_item), method: :delete, data: { confirm: "Are you sure?" } if logged_in?(:site_admin )%>