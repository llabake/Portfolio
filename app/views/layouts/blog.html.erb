<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="keywords" content="<%= @seo_keywords %>" />

    <%= favicon_link_tag 'favicon_io/favicon.ico' %>

    <%= stylesheet_link_tag    'blogs', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <%= render 'shared/blog_nav' %>

    <!--    Start of blog header-->
    <%= render 'shared/blog_masthead' %>
    <!--    End of blog header-->

    <!--    Start of container and row elements-->
    <div class="container">
      <div class="row">

        <%= yield %>

        <%= render 'shared/blog_sidebar' %>
        <%= alerts %>

      </div>
      <!-- Start of Footer -->
      <%= render 'shared/blog_footer' %>
      <!-- End of Footer -->
    </div>
    <!--    End of container and row elements-->
  </body>
</html>
